<configuration name="happy_voicemail.conf" description="Happy Voicemail Configuration file">
	<settings>
		<param name="tone-spec" value="%(1300, 0, 640)"/>
		<param name="record-silence-threshold" value="0"/>
		<param name="record-silence-hits" value="0"/>
		<param name="record-check-silence" value="false"/>
		<param name="record-max-len" value="600"/>
		<param name="s3-url" value="{{ s3_url }}"/>
		<param name="file-system-folder-in" value="/tmp/voicemails/in"/>
		<param name="file-system-folder-out" value="/tmp/voicemails/out"/>
		<param name="dump-events" value="false"/>
		<param name="record-file-ext" value="wav"/>
		<param name="cache-enabled" value="no"/>
		<param name="pin-check" value="yes"/>

		<!-- slt|kal|awb|rms -->
		<param name="voice" value="slt"/>

		<!--param name="aws_id" value="{{ aws_id }}"/-->
		<!--param name="aws_key" value="{{ aws_key }}"/-->
		<!--param name="aws_region" value="{{ aws_region }}"/-->

		<param name="aws_id" value="{{ aws_id }}"/>
		<param name="aws_key" value="{{ aws_key }}"/>
		<param name="aws_region" value="{{ aws_region }}"/>
	</settings>
</configuration> 
